.side-bar
  .side-bar__user-name
    .side-bar__user-name__top-items
      .side-bar__user-name__top-items__name
        = current_user.name
      .side-bar__user-name__top-items__icon 
        = link_to new_group_path do
          = icon('fas', 'edit', class: 'side-bar__user-name__top-items__icon') 
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'side-bar__user-name__top-items__icon')
  .side-bar__group-info
    - current_user.groups.each do |group|
      .side-bar__group-info__chat
        =link_to '#', class: "side-bar__group-info__chat" do
          .side-bar__group-info__chat__group-name
            = group.name
          .side-bar__group-info__chat__message-alert
            メッセージはありません