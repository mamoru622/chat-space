.message{data: {message: {id: message.id}}}
  .main-chat__message-info__name-time
    .main-chat__message-info__name-time__name
      = message.user.name
    .main-chat__message-info__name-time__time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__message-info__content
    - if message.content.present? 
      %p.main-chat__message-info__content__text
        = message.content
    = image_tag message.image.url, class: 'main-chat__message-info__content__image' if message.image.present?
  