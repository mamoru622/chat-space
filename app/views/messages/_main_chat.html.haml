.main-chat
  .main-chat__group-info
    .main-chat__group-info__group-name
      = @group.name
      .main-chat__group-info__group-name__group-member
        member:
        - @group.users.each do |user|
          = user.name
    =link_to edit_group_path(@group.id),class: "main-chat__group-info__edit-btn" do
      Edit
    
  .main-chat__message-info
    = render @messages
    
  .main-chat__message-form
    = form_for [@group, @message] do |f|
      .main-chat__message-form__input-area
        = f.text_field :content, class: 'main-chat__message-form__input-area__text', placeholder: 'type a message'
        = f.label :image, class: 'main-chat__message-form__input-area__image' do
          = icon('far', 'image', class: 'icon')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'main-chat__message-form__submit'